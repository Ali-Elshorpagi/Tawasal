@model ChangeUsernameViewModel

@{
    ViewData["Title"] = "Change Username";
}

<h2>Change Username</h2>
<form asp-action="ChangeUsername" method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="CurrentUsername" class="control-label"></label>
        <input asp-for="CurrentUsername" class="form-control" readonly />
    </div>
    <div class="form-group">
        <label asp-for="NewUsername" class="control-label"></label>
        <input asp-for="NewUsername" class="form-control" />
        <span asp-validation-for="NewUsername" class="text-danger"></span>
    </div><br />
    <h6 class="alert alert-info" style="font-size: 12px; padding: 8px;">
        After change your username, please <strong> re-login </strong> to apply changes.
    </h6>
    <div class="form-group">
        <input type="submit" value="Change Username" class="btn btn-primary" />
        <a class="btn btn-secondary" asp-action="Details" asp-controller="Profile" asp-route-id="@User.FindFirstValue(ClaimTypes.NameIdentifier)">Back to Profile</a>
    </div>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
