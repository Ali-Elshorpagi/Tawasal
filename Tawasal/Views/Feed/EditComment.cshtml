@model EditCommentViewModel

@{
    ViewData["Title"] = "Edit Comment";
}

<h2>Edit Comment</h2>

<form asp-action="EditComment" method="post">
    <input type="hidden" asp-for="Id" />
    <input type="hidden" asp-for="PostId" />
    <div class="form-group">
        <textarea asp-for="Content" class="form-control" rows="3"></textarea>
        <span asp-validation-for="Content" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary mt-3">Save Changes</button>
    <a asp-action="PostDetails" asp-route-id="@Model.PostId" class="btn btn-secondary mt-3">Cancel</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
